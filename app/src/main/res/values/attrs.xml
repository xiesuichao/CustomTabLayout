<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomTabLayout">
        <attr name="ctlTvTextSize" format="dimension"/>
        <attr name="ctlTvTextColorNormal" format="color"/>
        <attr name="ctlTvTextColorChecked" format="color"/>
        <attr name="ctlTvPaddingLeft" format="dimension"/>
        <attr name="ctlTvPaddingRight" format="dimension"/>
        <attr name="ctlTvBackgroundColor" format="color"/>
        <attr name="ctlTvTextStyle" format="enum">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
        </attr>
        <attr name="ctlUnderlineWidth" format="dimension"/>
        <attr name="ctlUnderlineHeight" format="dimension"/>
        <attr name="ctlUnderlineMarginBottom" format="dimension"/>
        <attr name="ctlUnderlineBackground" format="reference"/>
        <attr name="ctlUnderlineColor" format="color"/>
        <attr name="ctlIndicatorSrc" format="reference"/>
        <attr name="ctlIndicatorPaddingLeft" format="dimension"/>
        <attr name="ctlIndicatorPaddingTop" format="dimension"/>
        <attr name="ctlIndicatorPaddingRight" format="dimension"/>
        <attr name="ctlIndicatorPaddingBottom" format="dimension"/>
        <attr name="ctlIndicatorPadding" format="dimension"/>
        <attr name="ctlAnimDuration" format="integer"/>
        <attr name="ctlHorizontalSpace" format="dimension"/>
        <!--是否自适应，间隔自动平分-->
        <attr name="ctlAdaptive" format="boolean"/>
        <!--title只有两个时，间隔是否全等-->
        <attr name="ctlSpaceEqualsForTwo" format="boolean"/>
        <!--title只有两个时，最左边和最右边是否添加间隔-->
        <attr name="ctlAddSpaceForTwo" format="boolean"/>
    </declare-styleable>

</resources>